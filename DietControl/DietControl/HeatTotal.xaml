<UserControl x:Class="DietControl.HeatTotal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DietControl"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="400">

    <Grid Background="DarkCyan" Height="100" x:Name="ItemTop">

        <!-- 定義格子 -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition Width="300"></ColumnDefinition>
        </Grid.ColumnDefinitions>
       
        <!-- 日期框 -->
        <Grid Grid.Column="0" Background="LightCyan">
            <TextBox x:Name="Date" Background="LightCyan" FontSize="22" Margin="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderThickness="0">Dates</TextBox>
        </Grid>

        <Grid Grid.Column="1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                <TextBlock  FontSize="30" Margin="10" >總熱量:</TextBlock>
                <TextBox x:Name="AllHeat" Background="DarkCyan" FontSize="35" Width="165" VerticalAlignment="Center"></TextBox>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
