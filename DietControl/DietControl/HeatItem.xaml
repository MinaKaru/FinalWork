<UserControl x:Class="DietControl.HeatItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DietControl"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="400">
    <Grid Background="LightCyan" Height="80" x:Name="ItemCenter">
        
        <!-- 定義格子 -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"></ColumnDefinition>
            <ColumnDefinition Width="320"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <!-- 食物名 -->
        <Grid Grid.Column="0" >
            <TextBox x:Name="Food" Background="LightCyan" FontSize="20" Margin="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderThickness="0">Foods</TextBox>
        </Grid>

        <!-- 熱量輸入區 -->
        <Grid Grid.Column="1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                <TextBlock FontSize="22" Margin="10" >熱量:</TextBlock>
                <TextBox x:Name="FoodHeat" Background="LightCyan" Margin="5" FontSize="22" Width="165" VerticalAlignment="Center"></TextBox>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
